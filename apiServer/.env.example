# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=animal_zoom

# JWT
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Guest Configuration
GUEST_TOKEN_EXPIRES_IN=24h

# WebSocket
WS_PORT=3001

# Resource Server
RESOURCE_SERVER_URL=http://localhost:4000

# Asset Storage Configuration
# Mode: "s3" (production) | "local" (development) | "hybrid"
ASSET_STORAGE_MODE=s3

# S3 Configuration
# For MinIO (local development):
#   - Set AWS_ENDPOINT_URL to your MinIO server (e.g., http://localhost:9000)
#   - URLs will be generated as: http://localhost:9000/bucket-name/key
# For AWS S3 (production):
#   - Leave AWS_ENDPOINT_URL empty
#   - URLs will be generated as: https://bucket-name.s3.region.amazonaws.com/key

# Development (MinIO) - Uncomment for local development:
# AWS_ENDPOINT_URL=http://localhost:9000
# AWS_BUCKET_NAME=local-assets
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=minioadmin
# AWS_SECRET_ACCESS_KEY=minioadmin

# Production (AWS S3) - Use these for production:
AWS_ENDPOINT_URL=
AWS_BUCKET_NAME=animal-zoom-resources
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# CDN Configuration (optional, for production)
ASSET_CDN_URL=

# Local Storage Configuration (for development)
LOCAL_ASSETS_PATH=./uploads/assets

# Room Configuration
MAX_PARTICIPANTS_PER_ROOM=50
ROOM_IDLE_TIMEOUT_MINUTES=30
