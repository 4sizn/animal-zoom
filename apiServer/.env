# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=animal_zoom

# JWT
JWT_SECRET=dev-secret-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Guest Configuration
GUEST_TOKEN_EXPIRES_IN=24h

# WebSocket
WS_PORT=3001

# Resource Server
RESOURCE_SERVER_URL=http://localhost:4000

# Asset Storage Configuration
ASSET_STORAGE_MODE=s3

# S3/MinIO Configuration (using MinIO for local development)
AWS_ENDPOINT_URL=http://localhost:9000
AWS_BUCKET_NAME=local-assets
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin

# CDN Configuration (optional)
ASSET_CDN_URL=

# Room Configuration
MAX_PARTICIPANTS_PER_ROOM=50
ROOM_IDLE_TIMEOUT_MINUTES=30
