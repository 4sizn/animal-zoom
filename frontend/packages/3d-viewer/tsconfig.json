{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "paths": {
      "@/*": ["./src/*"],
      "@animal-zoom/shared": ["../shared/src"],
      "@animal-zoom/shared/api": ["../shared/src/api"],
      "@animal-zoom/shared/types": ["../shared/src/types"],
      "@animal-zoom/shared/socket": ["../shared/src/socket"],
      "@animal-zoom/shared/*": ["../shared/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "__tests__"]
}
